<h1>Flights Index</h1>

<% @flights.each do |flight| %>
    <div id="flight-<%= flight.id %>">
        <h2>Flight Number: <%= flight.number %> - Airline: <%= flight.airline.name %></h2>
        <ul>
            <% flight.passengers.each do |passenger| %>
                <li>
                    <%= passenger.name %>
                    <%= button_to "Remove", flight_flight_passenger_path(flight_id: flight.id, id: passenger.id), method: :delete %>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>